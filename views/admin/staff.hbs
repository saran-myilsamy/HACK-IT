<div class="row">
<div class="col-sm-2 col-md-2 col-lg-2 col-xl-2">
    <nav class="navbar navbar-expand-lg navbar-light flex-column">
    <a class="navbar-brand" style="font-size: 20px;" href="home">KCT</a>
    <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
    >
        <span class="navbar-toggler-icon"></span>
    </button>
    <br /><br />
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav flex-column">
        <li
            class="nav-item active"
            style="background-color: rgb(0, 51, 102);"
            id="student-nav"
        >
            <a
            class="nav-link text-white"
            style="font-size: 25px;"
            href="faculty"
            >Faculty<span class="sr-only">(current)</span></a
            >
        </li>
        <li class="nav-item mt-md-2">
            <a
            class="nav-link"
            style="font-size: 25px;"
            href="student"
            id="teacher-nav"
            >Student</a
            >
        </li>
        </ul>
    </div>
    </nav>
</div>
<div class="col-sm-10 col-md-10 col-lg-10 col-xl-9">
    <div class="text-center mt-2">
        <h4 id="student-top">Staff List</h4>
    </div>
    <div class="row mt-2 p-3" id="table-div">
        <div class="row mt-2">
            {{#each list}}
            <div class="col-sm-12 col-md-12 col-lg-12 col-12">
            <div class="table-responsive table-responsive-sm">
                <table class="table table-sm text-center" id="col1">
                    <tbody>
                    <tr>
                        <td rowspan="2" style="vertical-align: middle;">{{math @index "+" 1}}</td>
                        <td>{{this.rollno}}</td>
                        <td>{{this.dept}}</td>
                        <td>{{this.fullName}}</td>
                        <td><button type="submit" class="btn btn-outline-warning btn-sm" onclick="window.location.href='/admin/{{this._id}}'">
                          Update <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                        </button></td>
                        <td><button type="submit" class="btn btn-outline-danger btn-sm" onclick="window.location.href='/admin/delete/{{this._id}}'">
                          Delete <i class="fa fa-trash" aria-hidden="true"></i>
                        </button></td>
                    </tr>
                    <tr>
                    <td colspan="2">{{this.email}}</td>
                    <td>{{this.phone}}</td>
                    <td colspan="2">
                        <button type="submit" class="btn btn-outline-primary btn-sm" onclick="window.location.href='/admin/view/{{this._id}}'">
                        View <i class="fa fa-chevron-right"></i>
                        </button>
                    </td>
                    </tr>
                    </tbody>
                </table>
            </div>
            </div>
            {{/each}}
        </div>
    </div>
    <div class="row mt-1" >
        <div class="col-12 text-center">
        <button type="button" class="btn btn-outline-success btn-md" data-toggle="tooltip" title="Add New Staff" onclick="window.location.href = '/admin'"><i class="fa fa-plus" aria-hidden="true"></i> Add Staff</button>
    </div>
</div>
</div>